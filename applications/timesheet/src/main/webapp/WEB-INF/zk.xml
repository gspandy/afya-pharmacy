<?xml version="1.0" encoding="UTF-8"?>

<zk>
	<!-- [Optional]
	Uncomment if you want to defines the application's name 
	
	<preference>
		<name>org.zkoss.zk.ui.WebApp.name</name>
		<value>timesheet</value>
	</preference>
	-->
    <language-config>
        <addon-uri>/WEB-INF/addons/hrmstheme-addon.xml
        </addon-uri>
        <addon-uri>/WEB-INF/addons/lang-addon.xml
        </addon-uri>
    </language-config>

    <listener>
        <listener-class>com.zpc.sharedkernel.ofbiz.mocks.OfbizMocksInjectionInterceptor</listener-class>
    </listener>

    <session-config>
        <device-type>ajax</device-type>
        <timeout-uri></timeout-uri>
        <max-desktops-per-session>15</max-desktops-per-session>
        <max-requests-per-session>50</max-requests-per-session>
        <max-pushes-per-session>30</max-pushes-per-session>
    </session-config>

</zk>
